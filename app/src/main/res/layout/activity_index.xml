<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_index"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="luohao.com.sportmeetv3.activitys.IndexActivity">

    <TextView
        android:id="@+id/index_stu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/fontcolor"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/index_stu_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/index_stu_name"
        android:background="@color/colorPrimary"
        android:textColor="@color/fontcolor"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="20dp"
        android:textSize="20dp" />


    <Button
        android:id="@+id/index_item_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/index_stu_num"
        android:layout_margin="15dp"
        android:text="@string/index_item_sign_up"
        />

    <Button
        android:id="@+id/index_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/index_weather"
        android:layout_below="@id/index_item_sign_up"
        />

    <Button
        android:id="@+id/index_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/index_weather"
        android:text="@string/index_msg"
         />

    <Button
        android:id="@+id/index_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/index_user_info"
        android:layout_below="@id/index_msg"
      />

</RelativeLayout>
