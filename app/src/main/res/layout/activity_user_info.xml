<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:padding="0dp"
    tools:context="luohao.com.sportmeetv3.activitys.UserInfoActivity">

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户详情"
        android:textColor="@color/fontcolor"
        android:textSize="30dp"
        android:padding="30dp"
        android:background="@color/colorPrimary"/>

    <TableRow android:padding="10dp">
        <TextView
            android:id="@+id/user_info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="学号："/>
        <TextView
            android:id="@+id/user_info_username_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </TableRow>

    <TableRow android:padding="10dp">
        <TextView
            android:id="@+id/user_info_railname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="姓名："/>
        <EditText
            android:id="@+id/user_info_railname_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
    </TableRow>

    <TableRow android:padding="10dp">
        <TextView
            android:id="@+id/user_info_collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="学院："/>
        <Spinner
            android:id="@+id/user_info_collage_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow android:padding="10dp">
        <TextView
            android:id="@+id/user_info_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="年级："/>
        <Spinner
            android:id="@+id/user_info_grade_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
    </TableRow>

    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="修改密码" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="修改完成"/>

</TableLayout>
